<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/services_not_found"
            android:visibility="gone"
            tools:visibility="visible"
            android:padding="20dp"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_message_service_undiscovered"/>

        <Button
            android:id="@+id/filter_button"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="Filter"
            android:padding="12dp"/>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/graph" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.pprochniak.sensorreader.services.SingleBarGraph
                android:id="@+id/x_bar_graph"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:orientation="vertical"/>

            <com.example.pprochniak.sensorreader.services.SingleBarGraph
                android:id="@+id/y_bar_graph"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:orientation="vertical"/>

            <com.example.pprochniak.sensorreader.services.SingleBarGraph
            android:id="@+id/z_bar_graph"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:orientation="vertical"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:id="@+id/peak_to_peak_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiving speed [samples/s]: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/receiving_speed"
                tools:text="80"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>